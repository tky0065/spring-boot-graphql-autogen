<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <name>GraphQL AutoGen Maven Plugin</name>
    <description>Maven plugin for generating GraphQL schemas from Java classes</description>
    <groupId>com.enokdev.graphql</groupId>
    <artifactId>graphql-autogen-maven-plugin</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <goalPrefix>graphql-autogen</goalPrefix>
    
    <mojos>
        <mojo>
            <goal>generate-schema</goal>
            <description>Generate GraphQL schema from Java classes</description>
            <requiresDirectInvocation>false</requiresDirectInvocation>
            <requiresProject>true</requiresProject>
            <requiresReports>false</requiresReports>
            <aggregator>false</aggregator>
            <requiresDependencyResolution>compile</requiresDependencyResolution>
            <requiresDependencyCollection></requiresDependencyCollection>
            <language>java</language>
            <instantiationStrategy>per-lookup</instantiationStrategy>
            <executionStrategy>once-per-session</executionStrategy>
            <threadSafe>true</threadSafe>
            
            <parameters>
                <parameter>
                    <name>basePackages</name>
                    <type>java.util.List</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Base packages to scan for GraphQL annotations</description>
                </parameter>
                
                <parameter>
                    <name>outputDirectory</name>
                    <type>java.io.File</type>
                    <required>true</required>
                    <editable>true</editable>
                    <description>Output directory for the generated schema file</description>
                </parameter>
                
                <parameter>
                    <name>schemaFileName</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Name of the generated schema file</description>
                </parameter>
                
                <parameter>
                    <name>generateInputs</name>
                    <type>boolean</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Whether to generate input types automatically</description>
                </parameter>
                
                <parameter>
                    <name>namingStrategy</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Naming strategy for generated types</description>
                </parameter>
            </parameters>
        </mojo>
        
        <mojo>
            <goal>validate-schema</goal>
            <description>Validate the generated GraphQL schema</description>
            <requiresDirectInvocation>false</requiresDirectInvocation>
            <requiresProject>true</requiresProject>
            <requiresReports>false</requiresReports>
            <aggregator>false</aggregator>
            <requiresDependencyResolution></requiresDependencyResolution>
            <requiresDependencyCollection></requiresDependencyCollection>
            <language>java</language>
            <instantiationStrategy>per-lookup</instantiationStrategy>
            <executionStrategy>once-per-session</executionStrategy>
            <threadSafe>true</threadSafe>
        </mojo>
        
        <mojo>
            <goal>clean-schema</goal>
            <description>Clean generated GraphQL schema files</description>
            <requiresDirectInvocation>false</requiresDirectInvocation>
            <requiresProject>true</requiresProject>
            <requiresReports>false</requiresReports>
            <aggregator>false</aggregator>
            <requiresDependencyResolution></requiresDependencyResolution>
            <requiresDependencyCollection></requiresDependencyCollection>
            <language>java</language>
            <instantiationStrategy>per-lookup</instantiationStrategy>
            <executionStrategy>once-per-session</executionStrategy>
            <threadSafe>true</threadSafe>
        </mojo>
    </mojos>
</plugin>
